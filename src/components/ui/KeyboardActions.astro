<script>
  import "ninja-keys";
  const ninja = document.querySelector("ninja-keys");
  if (ninja)
    ninja.data = [
      {
        id: "Print",
        title: "🖨️ Imprimir CV",
        hotkey: "ctrl+P",
        section: "Projects",
        handler: () => {
          window.print();
        },
      },
      {
        id: "Mailto",
        title: "📧 Contáctame",
        hotkey: "ctrl+M",
        handler: () => {
          window.location.href = "mailto:gcasado.ddw@gmail.com";
        },
      },
      {
        id: "Github",
        title: "🏗️ Github",
        hotkey: "ctrl+G",
        handler: () => {
          window.location.href = "https://github.com/SpaniardDev";
        },
      },
      {
        id: "Web ",
        title: "👀 Visita mi web",
        hotkey: "ctrl+alt+W",
        handler: () => {
          window.location.href = "https://spaniard.dev";
        },
      },
    ];
</script>
